# Domain/IP Configuration
DOMAIN=your-domain.com

# ACME Email (for Let's Encrypt certificates)
ACME_EMAIL=your-email@example.com

# Timezone Configuration
GENERIC_TIMEZONE=Europe/Paris

# Network Configuration (Docker internal network)
TRAEFIK_IP=
TRANSMISSION_IP=
EMBY_IP=
HOMEASSISTANT_IP=
MOSQUITTO_IP=
ZIGBEE2MQTT_IP=
N8N_IP=
GOVEE2MQTT_IP=
MOSQUITTO_PORT=
NETWORK_SUBNET=

# Transmission Configuration
TRANSMISSION_USER=transmission_username
TRANSMISSION_PASS=transmission_password

# Samba Configuration
SAMBA_USER=samba_username
SAMBA_PASS=samba_password

# n8n Configuration
# Encryption key for credentials storage (min 32 chars)
# Generate with: openssl rand -base64 32
N8N_ENCRYPTION_KEY=your-encryption-key-min-32-chars

# Goove2Mqtt
GOVEE_API_KEY=
GOVEE_MQTT_USER=
GOVEE_MQTT_PASSWORD=

# Specify the temperature scale to use, either C for Celsius
# or F for Fahrenheit
GOVEE_TEMPERATURE_SCALE=C

# Always use colorized output
RUST_LOG_STYLE=always
