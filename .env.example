# Domain/IP Configuration
DOMAIN=your-domain.com

# ACME Email (for Let's Encrypt certificates)
ACME_EMAIL=your-email@example.com

# Network Configuration (Docker internal network)
TRAEFIK_IP=
TRANSMISSION_IP=
EMBY_IP=
HOMEASSISTANT_IP=
MOSQUITTO_IP=
ZIGBEE2MQTT_IP=
GRAFANA_IP=
INFLUXDB_IP=
MONITOR_IP=
NETWORK_SUBNET=

# Transmission Configuration
TRANSMISSION_USER=transmission_username
TRANSMISSION_PASS=transmission_password

# Samba Configuration
SAMBA_USER=samba_username
SAMBA_PASS=samba_password

# InfluxDB 2.x Configuration
INFLUXDB_USERNAME=admin
INFLUXDB_PASSWORD=your-secure-password
INFLUXDB_ORG=my-org
INFLUXDB_BUCKET=raspberrypi
INFLUXDB_TOKEN=

# Monitor Service Configuration
HOSTNAME=raspberrypi
COLLECTION_INTERVAL=60

# Monitor Service Feature Toggles
ENABLE_CPU=true
ENABLE_MEMORY=true
ENABLE_DISK=true
ENABLE_TEMPERATURE=true
ENABLE_NETWORK=true

# Monitor Service Paths
CPU_TEMP_PATH=/sys/class/thermal/thermal_zone0/temp
